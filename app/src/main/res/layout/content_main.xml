<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.com220.sli.simonsays.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/start"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/bottomleft_button"
        android:layout_alignRight="@+id/bottomright_button"
        android:layout_alignEnd="@+id/bottomright_button"
        android:layout_alignLeft="@+id/bottomleft_button"
        android:layout_alignStart="@+id/bottomleft_button" />

    <Button
        android:id="@+id/topleft_button"
        android:text="Top Left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="@drawable/button_red"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_above="@+id/bottomleft_button"
        android:layout_toLeftOf="@+id/space2"
        android:layout_toStartOf="@+id/space2" />

    <Button
        android:id="@+id/topright_button"
        android:text="Top Right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="@drawable/button_green"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignBottom="@+id/topleft_button"
        android:layout_toRightOf="@+id/space2"
        android:layout_toEndOf="@+id/space2" />

    <Button
        android:id="@+id/bottomleft_button"
        android:text="Bottom Left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="@drawable/button_blue"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/space3"
        android:layout_toLeftOf="@+id/space2"
        android:layout_alignLeft="@+id/topleft_button"
        android:layout_alignStart="@+id/topleft_button" />

    <Button
        android:id="@+id/bottomright_button"
        android:text="Bottom Right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="@drawable/button_purple"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/space3"
        android:layout_toRightOf="@+id/space2"
        android:layout_alignBottom="@+id/bottomleft_button"
        android:layout_alignRight="@+id/topright_button"
        android:layout_alignEnd="@+id/topright_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: "
        android:textSize="25dp"
        android:textColor="#990000"
        android:id="@+id/textView"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25dp"
        android:id="@+id/score"
        android:layout_x="221dp"
        android:layout_y="464dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/newHighScore"
        android:layout_toEndOf="@+id/newHighScore" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/mainClose"
        android:layout_alignBottom="@+id/space2"
        android:layout_alignLeft="@+id/start"
        android:layout_alignStart="@+id/start"
        android:layout_alignRight="@+id/bottomright_button"
        android:layout_alignEnd="@+id/bottomright_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/newHighScore"
        android:layout_above="@+id/start"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/space2" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/space3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="193dp" />

</RelativeLayout>
