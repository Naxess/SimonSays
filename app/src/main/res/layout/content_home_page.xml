<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.com220.sli.simonsays.HomePage"
    tools:showIn="@layout/activity_home_page">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageTitle"
        android:src="@drawable/titleimageclear"
        android:layout_above="@+id/space" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textSize="30dp"
        android:textColor="#ffc914"
        android:background="@android:color/transparent"
        android:id="@+id/MainActivity"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:typeface="sans"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores"
        android:textSize="30dp"
        android:textColor="#ffc914"
        android:background="@android:color/transparent"
        android:id="@+id/ScorePage"
        android:layout_below="@+id/MainActivity"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="30dp"
        android:textColor="#ffc914"
        android:background="@android:color/transparent"
        android:id="@+id/AboutPage"
        android:layout_below="@+id/ScorePage"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit Game"
        android:textSize="30dp"
        android:textColor="#ffc914"
        android:background="@android:color/transparent"
        android:id="@+id/homeClose"
        android:layout_below="@+id/AboutPage"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/MainActivity"
        android:layout_centerHorizontal="true"
        android:id="@+id/space" />

</RelativeLayout>
